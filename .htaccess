# SocialHero - Root .htaccess
# Security protection for sensitive files

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Block access to .env and other sensitive files
    RewriteRule ^\.env$ - [F,L,NC]
    RewriteRule \.env$ - [F,L,NC]
    RewriteRule ^\.git - [F,L,NC]
    RewriteRule ^\.htaccess$ - [F,L,NC]

    # Block access to sensitive directories
    RewriteRule ^app/ - [F,L]
    RewriteRule ^config/ - [F,L]
    RewriteRule ^database/ - [F,L]
    RewriteRule ^storage/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# Block access to .env file specifically
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Block access to sensitive files by extension
<FilesMatch "\.(env|sql|log|bak|config|ini|sh)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block all dotfiles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
